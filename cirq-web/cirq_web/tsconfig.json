{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es2022",
    "module": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "outDir": "build",
    "moduleResolution": "Bundler",
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*.ts",
    "e2e/**/*.ts"
  ]
}
